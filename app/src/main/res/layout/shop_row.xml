<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="bottom"
                                    app:cardBackgroundColor="#ffe4b5"
                                    app:cardUseCompatPadding="true"
                                    app:cardCornerRadius="15dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_gravity="center_horizontal"
            android:id="@+id/cardRelative">

        <TextView
                fontPath="fonts/HonyaJi-Re.ttf"
                android:id="@+id/shop_name_text_view"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ShopName"
                android:textSize="23dp"
                android:layout_weight="0.5"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp" />

        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/shop_photo_image_view"
                android:src="@drawable/ic_hotpepper"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:layout_margin="7dp"
                android:scaleType="fitCenter" />

        <TextView
                fontPath="fonts/HonyaJi-Re.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Catch"
                android:id="@+id/shop_catch_text_view"
                android:textSize="18dp"
                android:layout_weight="0.4"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_margin="7dp" />

        <TextView
                fontPath="fonts/HonyaJi-Re.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:id="@+id/shop_budget_text_view"
                android:textSize="15dp"
                android:layout_weight="0.1"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                android:gravity="center_horizontal"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
